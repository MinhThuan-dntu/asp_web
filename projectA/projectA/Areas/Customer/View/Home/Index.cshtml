@model IEnumerable<SanPham>

<div class="container">

    <table class="table">
        <thead>
            <tr>
                <th>Tên sản phẩm</th>
                <th>Mô tả sản phẩm</th>
                <th>Giá tiền</th>
                <th>Hình ảnh</th>
                <th>Thể loại</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.price.ToString("N0") đ</td>
                    <td><img src="@item.ImageUrl" width="50%" /></td>
                    <td>@item.TheLoaiId</td>
                    <td>
                        <a asp-action="upsert" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Detail" asp-route-id="@item.Id">Detail</a> |
                        <a class="text-danger" onclick="confirmDelete(@item.Id, $(this))">Delete</a> |
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Sanpham" asp-action="Upsert" class="btn btn-primary">Thêm mới</a>

</div>